{
  "name": "construction-management-backend",
  "version": "1.0.1",
  "description": "Backend API for Construction Management System",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "clean": "node -e \"const fs=require('fs');const path=require('path');const distPath=path.join(__dirname,'dist');if(fs.existsSync(distPath)){fs.rmSync(distPath,{recursive:true,force:true});console.log('Cleaned dist folder');}\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "postbuild": "node -e \"const fs=require('fs');const path=require('path');const serverPath=path.join(__dirname,'dist','server.js');if(!fs.existsSync(serverPath)){console.error('Build failed: dist/server.js not found');process.exit(1);}console.log('Build successful');\"",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "test": "jest"
  },
  "keywords": [
    "construction",
    "management",
    "api",
    "mongodb",
    "express"
  ],
  "author": "Construction Management Team",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
